<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-5 bg-info rounded", local: true, data: { turbo: false }) do |f| %>
        <div class="row mb-3">
          <%= f.label :email, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="d-flex mb-3 justify-content-center">
          <%= f.submit "Log in" , class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3 text-center">
      <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "link-info link-underline link-underline-opacity-0 link-underline-opacity-100-hover" %>
    </div>
  </div>
</div>