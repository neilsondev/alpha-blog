<div class="col-10">
  <%= render "shared/errors", obj: @category %>
  <%= form_with(model: @category, class: "shadow p-3 mb-5 bg-info rounded", local: true, data: { turbo: false }) do |f| %>
    <div class="row mb-3">
      <%= f.label :name, "Category name", class: "col-sm-2 col-form-label text-light" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter category name" %>
      </div>
    </div>
    <div class="d-flex mb-3 justify-content-center">
      <%= f.submit class: "btn btn-outline-light btn-lg" %>
    </div>
  <% end %>
</div>
