<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-info rounded", local: true, data: { turbo: false }) do |f| %>
        <div class="row mb-3">
          <%= f.label :title, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :description, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :category, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <div class="bg-white p-2 shadow rounded">
            <%= f.collection_checkboxes(:category_ids, Category.all, :id, :name) do |b| %>
              <div class="form-check form-check-inline">
                <%= b.checkbox(class: "form-check-input") %>
                <%= b.label(class: "form-check-label") %>
              </div>
            <% end %>
            </div>
          </div>
        </div>

        <div class="d-flex mb-3 justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3 text-center">
      <%= link_to "[ Cancel and return to listing ]", articles_path, class: "link-info link-underline link-underline-opacity-0 link-underline-opacity-100-hover" %>
    </div>
  </div>
</div>